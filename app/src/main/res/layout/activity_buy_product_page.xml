<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.gretchen.agrodata.activities.BuyProductPage">

        <TextView
            android:id="@+id/BPP_product_name_TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="32dp"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:layout_marginTop="16dp"
            android:textSize="30sp"
            app:layout_constraintHorizontal_bias="0.437"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="32dp" />

        <TextView
            android:id="@+id/BPP_vendor_TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:text="@string/seller"
            android:textSize="18sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/BPP_product_name_TextView"
            android:layout_marginStart="16dp" />

        <TextView
            android:id="@+id/BPP_vedor_name_TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@+id/BPP_vendor_TextView"
            app:layout_constraintHorizontal_bias="0.04"
            app:layout_constraintLeft_toRightOf="@+id/BPP_vendor_TextView"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/BPP_vendor_TextView"
            app:layout_constraintVertical_bias="0.0"
            android:layout_marginRight="32dp"
            android:layout_marginEnd="32dp"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" />

        <TextView
            android:id="@+id/BPP_amount_available_TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:text="@string/amount_available"
            android:textSize="18sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/BPP_vedor_name_TextView"
            android:layout_marginStart="16dp" />

        <TextView
            android:id="@+id/BPP_product_amount_TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@+id/BPP_amount_available_TextView"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toRightOf="@+id/BPP_amount_available_TextView"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/BPP_amount_available_TextView"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" />

        <TextView
            android:id="@+id/BPP_price_TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="17dp"
            android:text="@string/product_price"
            android:textSize="18sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/BPP_amount_available_TextView"
            android:layout_marginStart="16dp" />

        <TextView
            android:id="@+id/BPP_product_price_TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@+id/BPP_price_TextView"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toRightOf="@+id/BPP_price_TextView"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/BPP_price_TextView"
            app:layout_constraintVertical_bias="1.0"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" />

        <TextView
            android:id="@+id/BPP_client_amount_TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:text="@string/product_amount"
            android:textSize="18sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/BPP_price_TextView"
            android:layout_marginStart="16dp" />

        <EditText
            android:id="@+id/BPP_amount_EditText"
            android:layout_width="93dp"
            android:layout_height="47dp"
            android:layout_marginLeft="8dp"
            android:ems="10"
            android:inputType="numberDecimal"
            app:layout_constraintBottom_toBottomOf="@+id/BPP_client_amount_TextView"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toRightOf="@+id/BPP_client_amount_TextView"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/BPP_client_amount_TextView"
            android:layout_marginStart="8dp" />

        <TextView
            android:id="@+id/BPP_amount_to_pay_TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="64dp"
            android:text="@string/amount_to_pay"
            android:textSize="24sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/BPP_client_amount_TextView"
            android:layout_marginStart="16dp" />

        <TextView
            android:id="@+id/BPP_amount_to_pay_user_TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="@+id/BPP_amount_to_pay_TextView"
            app:layout_constraintHorizontal_bias="0.06"
            app:layout_constraintLeft_toRightOf="@+id/BPP_amount_to_pay_TextView"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/BPP_amount_to_pay_TextView"
            app:layout_constraintVertical_bias="0.0"
            android:layout_marginRight="32dp"
            android:layout_marginEnd="32dp"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" />

        <Button
            android:id="@+id/BPP_direct_pay_Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/direct_pay"
            android:layout_marginRight="32dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/BPP_ath_movil_ImageButton"
            app:layout_constraintBottom_toBottomOf="@+id/BPP_ath_movil_ImageButton"
            app:layout_constraintLeft_toRightOf="@+id/BPP_ath_movil_ImageButton"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="32dp"
            app:layout_constraintVertical_bias="0.473" />

        <ImageButton
            android:id="@+id/BPP_ath_movil_ImageButton"
            android:layout_width="69dp"
            android:layout_height="45dp"
            android:layout_marginBottom="32dp"
            android:layout_marginLeft="32dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="72dp"
            android:padding="0dp"
            android:paddingBottom="0dp"
            android:paddingLeft="0dp"
            android:src="@drawable/ic_ath_movil"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/BPP_amount_to_pay_TextView"
            app:layout_constraintVertical_bias="0.0"
            tools:layout_editor_absoluteY="350dp" />

    </android.support.constraint.ConstraintLayout>
</ScrollView>