<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.gretchen.agrodata.activities.ProductProfile">

    <TextView
        android:id="@+id/PPP_product_name_TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="84dp"
        android:text="TextView"
        android:textAlignment="center"
        android:textSize="30sp"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/PPP_amount_TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="16dp"
        android:text="@string/product_amount"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/PPP_date_added_TextView" />

    <TextView
        android:id="@+id/PPP_product_amount_TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textSize="24sp"
        app:layout_constraintLeft_toRightOf="@+id/PPP_amount_TextView"
        android:layout_marginLeft="8dp"
        app:layout_constraintTop_toTopOf="@+id/PPP_amount_TextView"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/PPP_amount_TextView"
        android:layout_marginBottom="0dp"
        app:layout_constraintVertical_bias="1.0"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0" />

    <TextView
        android:id="@+id/PPP_price_TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="16dp"
        android:text="@string/product_price"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/PPP_amount_TextView" />

    <TextView
        android:id="@+id/PPP_product_price_TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textSize="24sp"
        app:layout_constraintTop_toTopOf="@+id/PPP_price_TextView"
        android:layout_marginTop="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/PPP_price_TextView"
        android:layout_marginBottom="0dp"
        app:layout_constraintVertical_bias="1.0"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/PPP_price_TextView"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="-1dp"
        app:layout_constraintHorizontal_bias="0.0" />

    <TextView
        android:id="@+id/PPP_seller_TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="16dp"
        android:text="@string/seller"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/PPP_price_TextView" />

    <TextView
        android:id="@+id/PPP_product_seller_TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textSize="24sp"
        app:layout_constraintTop_toTopOf="@+id/PPP_seller_TextView"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/PPP_seller_TextView"
        android:layout_marginBottom="0dp"
        app:layout_constraintVertical_bias="1.0"
        app:layout_constraintLeft_toRightOf="@+id/PPP_seller_TextView"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.02" />

    <TextView
        android:id="@+id/PPP_date_added_TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="16dp"
        android:text="@string/date_product_added"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/PPP_product_name_TextView" />

    <TextView
        android:id="@+id/PPP_product_date_added_TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textSize="24sp"
        app:layout_constraintTop_toTopOf="@+id/PPP_date_added_TextView"
        app:layout_constraintLeft_toRightOf="@+id/PPP_date_added_TextView"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/PPP_date_added_TextView"
        android:layout_marginBottom="0dp"
        app:layout_constraintVertical_bias="1.0"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0" />

    <TextView
        android:id="@+id/PPP_phone_TextView"
        android:layout_width="wrap_content"
        android:layout_height="29dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="16dp"
        android:text="@string/phone"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/PPP_seller_TextView"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/PPP_product_phone_TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textSize="24sp"
        app:layout_constraintLeft_toRightOf="@+id/PPP_phone_TextView"
        android:layout_marginLeft="8dp"
        app:layout_constraintTop_toTopOf="@+id/PPP_phone_TextView"
        android:layout_marginTop="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/PPP_phone_TextView"
        android:layout_marginBottom="0dp"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/PPP_seller_info_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:onClick="viewSellerProfile"
        android:text="@string/view_seller_info"
        android:visibility="visible"
        app:layout_constraintTop_toBottomOf="@+id/PPP_product_phone_TextView"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="32dp"
        app:layout_constraintVertical_bias="0.428"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/PPP_phone_TextView" />

    <Button
        android:id="@+id/PPP_change_info_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:onClick="changeProductInfo"
        android:text="@string/edit_product"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/PPP_phone_TextView"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/PPP_phone_TextView"
        app:layout_constraintVertical_bias="0.428" />

    <Button
        android:id="@+id/PPP_delete_product_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="0dp"
        android:background="@android:color/holo_red_dark"
        android:onClick="deleteProduct"
        android:text="@string/delete"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/PPP_change_info_button"
        app:layout_constraintHorizontal_bias="0.176"
        app:layout_constraintLeft_toRightOf="@+id/PPP_change_info_button"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/PPP_change_info_button"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/PPP_buy_Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="0dp"
        android:onClick="buyProduct"
        android:text="@string/buy_product"
        app:layout_constraintBottom_toBottomOf="@+id/PPP_seller_info_button"
        app:layout_constraintLeft_toRightOf="@+id/PPP_seller_info_button"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/PPP_seller_info_button"
        app:layout_constraintVertical_bias="0.0" />
</android.support.constraint.ConstraintLayout>
