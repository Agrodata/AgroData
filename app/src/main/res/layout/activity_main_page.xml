<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/MP_constraintlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context="com.example.gretchen.agrodata.activities.MainPage">

    <ImageButton
        android:id="@+id/MP_animal_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:adjustViewBounds="true"
        android:background="@android:color/transparent"
        android:contentDescription="@string/dairy"
        android:padding="0dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_animal"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/MP_grain_button"
        android:layout_marginLeft="16dp"
        app:layout_constraintTop_toTopOf="@+id/MP_grain_button"
        android:layout_marginTop="0dp"
        app:layout_constraintHorizontal_bias="0.521"
        app:layout_constraintBottom_toBottomOf="@+id/MP_grain_button"
        android:layout_marginBottom="0dp" />

    <Button
        android:id="@+id/MP_view_profile_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/view_profile"
        android:onClick="viewProfile"
        android:text="@string/view_profile"
        android:visibility="gone"
        tools:layout_editor_absoluteX="151dp"
        tools:layout_editor_absoluteY="8dp" />

    <TextView
        android:id="@+id/MP_farinaceuos_TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="0dp"
        android:layout_marginTop="0dp"
        android:text="@string/farinaceous"
        android:textAlignment="center"
        android:textColor="@android:color/background_dark"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="@+id/MP_farinaceuos_button"
        app:layout_constraintRight_toRightOf="@+id/MP_farinaceuos_button"
        app:layout_constraintTop_toBottomOf="@+id/MP_farinaceuos_button"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1" />

    <TextView
        android:id="@+id/MP_grain_TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="0dp"
        android:text="@string/grain"
        android:textAlignment="center"
        android:textColor="@android:color/background_dark"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="@+id/MP_grain_button"
        app:layout_constraintRight_toRightOf="@+id/MP_grain_button"
        app:layout_constraintTop_toBottomOf="@+id/MP_grain_button" />

    <TextView
        android:id="@+id/MP_vegetable_TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="0dp"
        android:text="@string/vegetable"
        android:textAlignment="center"
        android:textColor="@android:color/background_dark"
        android:textSize="18sp"
        app:layout_constraintHorizontal_bias="0.454"
        app:layout_constraintLeft_toLeftOf="@+id/MP_vegetable_button"
        app:layout_constraintRight_toRightOf="@+id/MP_vegetable_button"
        app:layout_constraintTop_toBottomOf="@+id/MP_vegetable_button" />

    <ImageButton
        android:id="@+id/MP_poultry_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:adjustViewBounds="true"
        android:background="@android:color/transparent"
        android:contentDescription="@string/poultry"
        android:padding="0dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_poultry"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/MP_grain_TextView"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/MP_poultry_TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="0dp"
        android:text="@string/poultry"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:textSize="18sp"
        app:layout_constraintHorizontal_bias="0.473"
        app:layout_constraintLeft_toLeftOf="@+id/MP_poultry_button"
        app:layout_constraintRight_toRightOf="@+id/MP_poultry_button"
        app:layout_constraintTop_toBottomOf="@+id/MP_poultry_button" />

    <TextView
        android:id="@+id/MP_fruit_TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="0dp"
        android:layout_row="1"
        android:text="@string/fruit"
        android:textAlignment="center"
        android:textColor="@android:color/background_dark"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="@+id/MP_fruit_button"
        app:layout_constraintRight_toRightOf="@+id/MP_fruit_button"
        app:layout_constraintTop_toBottomOf="@+id/MP_fruit_button"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1" />

    <ImageButton
        android:id="@+id/MP_meat_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:adjustViewBounds="true"
        android:background="@android:color/transparent"
        android:contentDescription="@string/meat"
        android:padding="0dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_meat"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginLeft="16dp"
        app:layout_constraintTop_toTopOf="@+id/MP_poultry_button"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"
        app:layout_constraintBottom_toTopOf="@+id/MP_poultry_TextView"
        app:layout_constraintVertical_bias="0.0"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/MP_fruit_button" />

    <ImageButton
        android:id="@+id/MP_farinaceuos_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_weight="1"
        android:adjustViewBounds="true"
        android:background="@android:color/transparent"
        android:contentDescription="@string/hay"
        android:padding="0dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_farinaceous"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/MP_poultry_button"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"
        app:layout_constraintBottom_toTopOf="@+id/MP_poultry_TextView"
        app:layout_constraintVertical_bias="0.0"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/MP_animal_button" />

    <ImageButton
        android:id="@+id/MP_fruit_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_weight="1"
        android:adjustViewBounds="true"
        android:background="@android:color/transparent"
        android:contentDescription="@string/fruit"
        android:padding="0dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_fruit"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/MP_grain_button"
        android:layout_marginRight="16dp"
        app:layout_constraintHorizontal_bias="0.521"
        app:layout_constraintTop_toTopOf="@+id/MP_grain_button"
        android:layout_marginTop="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/MP_grain_button"
        android:layout_marginBottom="0dp" />

    <TextView
        android:id="@+id/MP_meat_TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="0dp"
        android:text="@string/meat"
        android:textAlignment="center"
        android:textColor="@android:color/background_dark"
        android:textSize="18sp"
        app:layout_constraintHorizontal_bias="0.538"
        app:layout_constraintLeft_toLeftOf="@+id/MP_meat_button"
        app:layout_constraintRight_toRightOf="@+id/MP_meat_button"
        app:layout_constraintTop_toBottomOf="@+id/MP_meat_button" />

    <ImageButton
        android:id="@+id/MP_vegetable_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:adjustViewBounds="true"
        android:background="@android:color/transparent"
        android:contentDescription="@string/vegetable"
        android:padding="0dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_vegetable"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/MP_poultry_TextView" />

    <TextView
        android:id="@+id/MP_animal_TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="0dp"
        android:text="@string/animal"
        android:textAlignment="center"
        android:textColor="@android:color/background_dark"
        android:textSize="18sp"
        app:layout_constraintHorizontal_bias="0.533"
        app:layout_constraintLeft_toLeftOf="@+id/MP_animal_button"
        app:layout_constraintRight_toRightOf="@+id/MP_animal_button"
        app:layout_constraintTop_toBottomOf="@+id/MP_animal_button" />

    <Button
        android:id="@+id/MP_add_product_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:contentDescription="@string/add_product"
        android:onClick="goToAddProduct"
        android:text="@string/add_product"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/MP_vegetable_TextView"
        app:layout_constraintHorizontal_bias="0.497" />

    <Button
        android:id="@+id/MP_log_out_button"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:contentDescription="@string/log_out"
        android:onClick="logOut"
        android:text="@string/log_out"
        android:visibility="gone"
        tools:layout_editor_absoluteX="282dp"
        tools:layout_editor_absoluteY="7dp" />

    <ImageButton
        android:id="@+id/MP_grain_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:adjustViewBounds="true"
        android:background="@android:color/transparent"
        android:contentDescription="@string/grain"
        android:padding="0dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_grain"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="63dp" />


</android.support.constraint.ConstraintLayout>
